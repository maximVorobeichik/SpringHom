<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3307/PRODUCT</property>
        <property name="connection.username">root1</property>
        <property name="connection.password">root1</property>
        <property name="connection.pool_size">10</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>   <!-- уничтоджает старую бд и создает нову. Нужно только при первом подключение -->

<!--        См. класс, на аннотацию.-->
        <mapping class="ru.dz.product.Product"/>  <!--за счет этого он находит Entety -->
    </session-factory>
</hibernate-configuration>